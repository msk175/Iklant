extends ./layout
include ./header

block title
    title= 'IKLANT-ReportManagement'

block scripts
    link(rel='stylesheet', href='/stylesheets/jquery-ui.css')
    include ./headerJqueryMobile-1
    script(type='text/javascript', src='/javascripts/jquery-ui.js')
    script(type="text/javascript", src="/javascripts/reportmgmt.js")
    script(type='text/javascript', src='/javascripts/equifaxReportClients.js')

block content
    form(id='reportformid')
        div(data-role='page', data-theme='b')
            +header("Report Management",["backHref","menu","logout"],contextPath + '/client/ci/reportsMenuByCategory/2')
            div(data-role="collapsible", data-collapsed="false",data-content-theme="b", data-theme="b")
                h3 Equifax Report
                p(id ='errorField',data-theme="e",align='center',class='error-message global-font-details')
                div(data-role="content")
                    ul(data-role='listview', data-split-icon='gear', data-split-theme='b', data-filter="true", data-filter-theme='b',  data-filter-placeholder='Search for a group')
                        - for( var i = 0; i < groupNameArray.length; i++ ) {
                            li
                                a(href="JavaScript:showEquifaxReport('#{groupIdArray[i]}');")
                                    img(src='/images/edit.png', width='60', height='60', style='margin:8px 10px 10px 20px;')
                                    h3 #{groupNameArray[i]}
                                    label(for='groupsId' , id='labelGroupsId') #{centerNameArray[i]}
                                a(href='',  data-split-icon='gear', data-rel='popup', data-position-to='origin', data-transition='pop')
                        -}
            div(class="ui-loader-background")