    head
        title= 'IKLANT-Login'
        meta(charset='utf-8')
        meta(name='viewport',content='width=device-width, initial-scale=1')
        meta(http-equiv='Cache-Control', content='no-cache, private, no-store, must-revalidate, max-stale=0, post-check=0, pre-check=0')
        meta(http-equiv='Pragma', content='no-cache')
        meta(http-equiv='Expires', content='-1')
        link(rel='stylesheet', href='/stylesheets/jquery.mobile.css')
        link(rel='stylesheet', href='/stylesheets/jquery.mobile.structure-1.1.1.min.css')
        link(rel='stylesheet', href='/stylesheets/jquery.custom.css')
        link(rel='stylesheet', href='/stylesheets/dialogStyle.css')
        script(type='text/javascript', src='/javascripts/jquery-1.7.1.min.js')
        script(type='text/javascript', src='/javascripts/jquery.mobile.js')
        script(type='text/javascript', src='/javascripts/jquery.mobile.custom.js')
        script(type='text/javascript', src="/javascripts/LoginValidations.js")
        script(type='text/javascript', src='/javascripts/validation.js')
        script(type='text/javascript', src="/javascripts/registerUser.js")
        script(type='text/javascript', src='/javascripts/common.js')
    body
        div(data-role='page', data-theme='b', id="loginDetailsDiv")
            div(data-role="header", data-theme="a", class="ui-bar ui-grid-a", data-overlay-theme="c")
                div(class="ui-block-a")
                    img(id='groupIcon', src='/images/iklant.png')
                    h3(for="value", style="margin:20px 10px 0 0; text-align:right;")
            div(id="loginDetails",class="ui-bar ui-bar-c ui-corner-all", data-theme="a", data-overlay-theme="a", align="center")
                p(id="alertMessage") #{errorMessage}
                form(id="loginFormID", onsubmit="loginAccess()", align="center", method="post",action="")
                    div(data-role="fieldcontain", data-mini="true")
                        label(for="userName", data-inline="true", id="label") User Name
                        input(type="text", name="userName", id="userName", value="",onkeyup='forUserName(this)',required='required')
                    div(data-role="fieldcontain", data-mini="true")
                        label(for="password", data-inline="true", id="label") Password
                        input(type="password", name="password", id="password", value="",required='required',onkeyup='forUserName(this)',onfocusout='forUserName(this)')
                    input(type="submit", name="submit", id="submitId",value="Login", data-theme='b',data-icon='check',data-mini="true",data-inline='true')
                    a(href='JavaScript:resetFields()',rel="external", data-role='button', data-theme='b',data-icon='back',data-mini="true", title=' Reset ', data-inline='true') Reset
        div(class="ui-loader-background")