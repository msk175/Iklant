                    -}
                    -if(roleId == constObj.getAccountsExecutiveRoleId() || roleId == constObj.getSMHroleId()) {
                        //-div(class="ui-block-d")
                            div(data-role="fieldcontain", data-mini="true")
                                a(href=contextPath + '/client/ci/loadReportsByCategory/#{constObj.getManagementReports()}', rel="external", title='Management', data-inline='true')
                                    img(id='groupIcon', src='/images/Management.png',width='90%',height='90%')
                                    h3(class='menu-label') Management
                    -}
                    -if(roleId == constObj.getSMHroleId() || roleId == constObj.getAMHroleId()) {
                         div(class="ui-block-c")
                            div(data-role="fieldcontain", data-mini="true")
                                a(href=contextPath + '/client/ci/loadReportsByCategory/#{constObj.getOperationalMonthlyReports()}', rel="external", title='Operational', data-inline='true')
                                    img(id='groupIcon', src='/images/Operational.png',width='75%',height='75%')
                                    h3(class='menu-label') Operational Monthly Report
