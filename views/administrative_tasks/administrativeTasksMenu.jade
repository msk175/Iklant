extends ../layout
include ../header
block title
    title= 'Iklant-Administrative Tasks Menu'
block scripts
    include ../headerJqueryMobile-1
    script(type='text/javascript', src='/javascripts/administrative_tasks/administrativeTasks.js')
block content
    form(id='administrativeTasksMenuID')
        div(data-role='page', data-theme='b', id="menuDisplay")
            -if(menuPage == "Organization"){
            +header("",["menu","backHref","logout"],contextPath+ '/client/ci/getAdministrativeTasksMenu')
            -}else{
            +header("",["menu","backHref","logout"],contextPath+ '/client/ci/menu')
            -}
            -if(menuPage == ""){
            div(id="menu", data-theme="b", data-overlay-theme="b", class="ui-content", align="center")
                div(id="menuDetails", data-theme="b", class="ui-bar ui-grid-a", data-overlay-theme="b", data-inline="true")
                    div(data-role="horizontal", id="menuDetailsId", data-theme="b", class="ui-bar ui-grid-c", data-overlay-theme="b", data-inline="true")
                        div(class="ui-block-a")
                            div(data-role="fieldcontain", data-mini="true")
                                a(href='JavaScript:showFundCreationPage("Fund")', rel="external", title='Funds', data-inline='true')
                                    img(id='AccountingTrxn', src='/images/AccountingTrxn.png')
                                    h3(class="menu-label") Funds
                        div(class="ui-block-b")
                            div(data-role="fieldcontain", data-mini="true")
                                a(href='JavaScript:showFundCreationPage("GL")', rel="external", title='GL Accounts', data-inline='true')
                                    img(id='AccountingTrxn', src='/images/Accounting.png')
                                    h3(class="menu-label") GL Accounts
                        div(class="ui-block-c")
                            div(data-role="fieldcontain", data-mini="true")
                                a(href=contextPath +'/client/ci/loanproduct/listloanproduct', rel="external", title='Day Book', data-inline='true')
                                    img(id='AccountingTrxn', src='/images/ViewTrxn.png')
                                    h3(class="menu-label") Loan Product
            -}
            div(class="ui-loader-background")